{
  "name": "vscode-agents",
  "displayName": "vs code agents",
  "description": "Multiple Copilot Chat agents (personas) for VS Code, switchable via @commands.",
  "version": "0.0.5",
  "publisher": "monkey1sai",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "keywords": [
    "copilot",
    "chat",
    "agents",
    "prompts",
    "persona"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/monkey1sai/vscode-agents.git"
  },
  "homepage": "https://github.com/monkey1sai/vscode-agents",
  "bugs": {
    "url": "https://github.com/monkey1sai/vscode-agents/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/monkey1sai"
  },
  "activationEvents": [
    "onChatParticipant:agent.ai_agent",
    "onChatParticipant:agent.ai_infra",
    "onChatParticipant:agent.ai_test",
    "onChatParticipant:agent.ai_data",
    "onChatParticipant:agent.ai_product",
    "onChatParticipant:agent.ddd_engineer",
    "onChatParticipant:agent.arch_destroyer",
    "onChatParticipant:agent.super_coding"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "agent.ai_agent",
        "name": "ai_agent",
        "description": "AI Agent 工程師",
        "isSticky": true
      },
      {
        "id": "agent.ai_infra",
        "name": "ai_infra",
        "description": "AI 基礎設施",
        "isSticky": true
      },
      {
        "id": "agent.ai_test",
        "name": "ai_test",
        "description": "AI 測試工程師",
        "isSticky": true
      },
      {
        "id": "agent.ai_data",
        "name": "ai_data",
        "description": "AI 資料工程師",
        "isSticky": true
      },
      {
        "id": "agent.ai_product",
        "name": "ai_product",
        "description": "AI產品工程師",
        "isSticky": true
      },
      {
        "id": "agent.ddd_engineer",
        "name": "ddd_engineer",
        "description": "領域驅動設計（DDD）工程師",
        "isSticky": true
      },
      {
        "id": "agent.arch_destroyer",
        "name": "arch_destroyer",
        "description": "架構滅絕師",
        "isSticky": true
      },
      {
        "id": "agent.super_coding",
        "name": "super_coding",
        "description": "超級codeing助理",
        "isSticky": true
      }
    ],
    "configuration": {
      "title": "VS Code Agents",
      "properties": {
        "vscodeAgents.promptOverrideFolder": {
          "type": "string",
          "default": "",
          "description": "Relative or absolute path to a folder containing override prompt files (e.g. ai_agent.prompt.md). Files found in this folder take precedence over the built-in prompts."
        },
        "vscodeAgents.debugPromptSource": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, each agent response will include a short debug line indicating whether the built-in prompt or an override file was used (and the override file path if applicable)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}